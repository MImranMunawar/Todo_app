<h3>Update a Task</h3>

<%= form_with model: @task, class: "form" do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter your title" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: "Enter your description" %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, class: "form-control", placeholder: "Due Date" %>
  </div>

  <div class="form-group">
    <%= f.label :status, class: "d-block" %>
    <%= f.select :status, Task.statuses.keys, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :priority %>
    <%= f.select :priority, [['High', 'high'], ['Medium', 'medium'], ['Low', 'low']], {}, class: "form-control" %>
  </div>

<div class="form-group">
  <%= f.label :assigned_user_ids, "Assign Users", class: "d-block" %>
  <%= f.select :assigned_user_ids, User.all.collect { |u| [u.name, u.id] }, {}, multiple: true, class: "form-control" %>
</div>

  <%= f.submit "Update Task", class: "btn btn-primary" %>
<% end %>

