<h1>Task Detail</h1>

<%= form_with model: @task, class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", readonly: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", readonly: true %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, class: "form-control", readonly: true %>
  </div>

  <div class="form-group">
    <%= f.label :status, class: "d-block" %>
    <%= f.text_field :status, class: "form-control", readonly: true %>
  </div>
<% end %>
